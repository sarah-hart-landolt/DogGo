@model DogGo.Models.ViewModels.WalkerViewModel


@{ ViewData["Title"] =
    "Profile"; }

<h1>Walker Profile</h1>

<div>
    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />

        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>

    </section>
</div>
<h1>Walks</h1>

<div>
    <section>
            <div class="col">
                <div class="row">
                    @foreach (Walk walk in Model.Walks)
                    {
                        <div class="card m-4" style="width: 18rem;">
                            <div class="card-body">
                                <div>
                                    <label class="font-weight-bold">Name:</label>
                                    <span>@walk.Date</span>
                                </div>
                                <div>
                                    <label class="font-weight-bold">Client:</label>
                                    <span>@walk.Owner.Name</span>
                                </div>
                                <div>
                                    <label class="font-weight-bold">Duration:</label>
                                    <p>@walk.Duration minutes</p>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
            </div>
            <div class="col">
                <div class="row">
                    <div class="card m-4" style="width: 18rem;">
                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Total Walk Time:</label>
                                <p>@Model.Total minutes</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </section>
</div>




